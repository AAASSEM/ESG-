# Production Environment Configuration for ESG Platform

# Application Settings
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your_super_secret_key_change_in_production_minimum_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
POSTGRES_DB=esg_platform
POSTGRES_USER=esg_user
POSTGRES_PASSWORD=secure_production_password_change_me
DATABASE_URL=postgresql+asyncpg://esg_user:secure_production_password_change_me@postgres:5432/esg_platform

# Redis Configuration
REDIS_PASSWORD=redis_production_password_change_me
REDIS_URL=redis://default:redis_production_password_change_me@redis:6379/0

# CORS Settings
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB
UPLOAD_DIR=/app/uploads

# Backup Settings
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/app/backups

# Monitoring Settings
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password_change_me

# Security Settings
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
SESSION_TIMEOUT_MINUTES=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@company.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/esg_platform.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/esg_platform.crt
SSL_KEY_PATH=/etc/ssl/private/esg_platform.key

# Performance Settings
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3